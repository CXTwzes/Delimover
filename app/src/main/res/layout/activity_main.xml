<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Frame_BottemView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/item_bar">

        <LinearLayout
            android:id="@+id/MyBottemNearBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/MyBottemNearImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/main_index_grow_pressed"
                />

            <TextView
                android:id="@+id/MyBottemNearTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选"
                android:textColor="#FF8C00"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MyBottemGrowBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemGrowImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/main_index_near_normal" />
            <TextView
                android:id="@+id/MyBottemGrowTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="草坪"
                android:textSize="13dp"
                android:textColor="@color/cardview_shadow_start_color"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/MyBottemFindBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemFindImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/main_index_find_normal" />

            <TextView
                android:id="@+id/MyBottemFindTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textSize="13dp"
                android:textColor="@color/cardview_shadow_start_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MyBottemMyBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemMyImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/main_index_my_normal" />

            <TextView
                android:id="@+id/MyBottemMyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="13dp"
                android:textColor="@color/cardview_shadow_start_color"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/FramePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Frame_BottemView" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>